<h1 class="bg-danger">Add New Account</h1>

<%= simple_form_for :account do |f| %>
  <%= f.input :creditor, required: true %>
  <%= f.input :description, as: :text %>
  <%= f.input :url, label: 'URL' %>
  <%= f.input :balance, as: :currency %>
  <%= f.input :interest_rate, as: :float, input_html: {value: '5.500', step: '0.001'} %>
  <%= f.input :interest_accrual_type %>
  <%= f.input :day_due, collection: 1..28, prompt: "Select One" %>
  <%= f.input :min_payment_due, as: :currency %>
  <%= f.input :expected_payment, as: :currency %>
  <%= f.input :auto_payment, as: :boolean %>
  <%= f.button :submit %>
<% end %>
